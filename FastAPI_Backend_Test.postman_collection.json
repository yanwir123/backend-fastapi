{
  "info": {
    "name": "FastAPI Backend Test (Services, Gallery, Blog) FINAL",
    "description": "Collection lengkap untuk mengetes semua fitur backend: Auth, Upload, Admin, Services, Gallery, Blog.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "AUTH - Register User",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{base_url}}/auth/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"user1\",\n  \"email\": \"user1@example.com\",\n  \"password\": \"password123\"\n}"
        }
      }
    },

    {
      "name": "AUTH - Verify OTP",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{base_url}}/auth/verify-otp",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user1@example.com\",\n  \"otp\": \"123456\"\n}"
        }
      }
    },

    {
      "name": "AUTH - Login User",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{base_url}}/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"user1\",\n  \"password\": \"password123\"\n}"
        }
      }
    },

    {
      "name": "AUTH - Login Admin",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{base_url}}/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
        }
      }
    },

    {
      "name": "SERVICES - Create Service (Admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token_admin}}" }
        ],
        "url": "{{base_url}}/services/",
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "title", "value": "Service Baru", "type": "text" },
            {
              "key": "description",
              "value": "Deskripsi service baru",
              "type": "text"
            },
            { "key": "file", "type": "file", "src": "" }
          ]
        }
      }
    },

    {
      "name": "SERVICES - Get All Services",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/services/"
      }
    },

    {
      "name": "SERVICES - Update Service (Admin)",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token_admin}}" }
