        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "title", "value": "Service Diupdate", "type": "text" },
            {
              "key": "description",
              "value": "Deskripsi update",
              "type": "text"
            },
            { "key": "file", "type": "file", "src": "" }
          ]
        }
      }
    },

    {
      "name": "SERVICES - Delete Service",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token_admin}}" }
        ],
        "url": "{{base_url}}/services/1"
      }
    },

